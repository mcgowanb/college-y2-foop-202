<Window x:Class="exceptions.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:exceptions"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Button x:Name="btnCalculate" Content="Calculate" HorizontalAlignment="Left" Margin="165,80,0,0" VerticalAlignment="Top" Width="75" Click="btnCalculate_Click"/>
        <TextBox x:Name="txtNumber" HorizontalAlignment="Left" Height="23" Margin="165,32,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBlock x:Name="txtBlkAns" HorizontalAlignment="Left" Height="90" Margin="165,125,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="135"/>

    </Grid>
</Window>
